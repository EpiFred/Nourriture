extends layout
block content
    h1= title
    p Managing Users
    // Wrapper
    #wrapper
        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Password:
                | <span id='userInfoPassword'></span>
                br
                strong First Name:
                | <span id='userInfoFirstName'></span>
                br
                strong Last Name:
                | <span id='userInfoLastName'></span>
                br
                strong Age:
                | <span id='userInfoAge'></span>
                br
                strong Gender:
                | <span id='userInfoGender'></span>
                br
                strong Restriction:
                | <span id='userInfoRestriction'></span>
                br
                strong Location:
                | <span id='userInfoLocation'></span>
                br
                strong Favorites:
                | <span id='userInfoFavorites'></span>

        // /USER INFO
        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete?
                tbody
        // /USER LIST
        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserLogin(type='text', placeholder='Login')
                input#inputUserPassword(type='text', placeholder='Password')
                br
                input#inputUserFirstName(type='text', placeholder='First Name')
                input#inputUserLastName(type='text', placeholder='Last Name')
                br
                input#inputUserAge(type='text', placeholder='Age')
                input#inputUserEmail(type='email', placeholder='Email')
                br
                input#inputUserRestriction(type='text', placeholder='Restriction')
                input#inputUserFavorites(type='text', placeholder='Favorites')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                input#inputUserGender(type='text', placeholder='gender')
                br
                button#btnAddUser Add User
        // /ADD USER
    // /WRAPPER